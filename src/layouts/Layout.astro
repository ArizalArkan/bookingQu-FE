---
import '../styles/global.css';

interface Props {
	title?: string;
}

const { title = 'BookingQu - Beli Tiket Nonton' } = Astro.props;
---

<!doctype html>
<html lang="id">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Booking tiket bioskop online dengan mudah" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-cinema-dark min-h-screen">
		<slot />
	</body>
</html>
