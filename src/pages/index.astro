---
import Layout from '../layouts/Layout.astro';
import { PageWrapper } from '../components/common/PageWrapper';
import { StudioList } from '../components/booking/StudioList';
---

<Layout title="Cinema Booking - Pilih Studio">
	<PageWrapper client:load>
	<div class="py-12 px-4 sm:px-6 lg:px-8">
		<div class="max-w-7xl mx-auto">
			<div class="text-center mb-12">
				<h1 class="text-4xl md:text-5xl font-bold text-white mb-4">
					Selamat Datang di BookingQu
				</h1>
				<p class="text-xl text-gray-400 max-w-2xl mx-auto">
					Pilih studio favorit Anda dan booking kursi dengan mudah!
				</p>
			</div>

			<div class="mb-8">
				<h2 class="text-2xl font-bold text-white mb-6">Pilih Studio</h2>
				<StudioList client:load />
			</div>
		</div>
	</div>
	</PageWrapper>
</Layout>
